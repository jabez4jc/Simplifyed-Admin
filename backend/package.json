{
  "name": "simplifyed-trading-backend",
  "version": "1.0.0",
  "description": "Simplifyed Trading Dashboard Backend API",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node --env-file=.env server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build process needed for backend'",
    "test": "node ../test/run-all-tests.js",
    "test:api": "node ../test/api/test-core-api.js && node ../test/api/test-options-api.js",
    "test:core": "node ../test/api/test-core-api.js",
    "test:options": "node ../test/api/test-options-api.js",
    "test:integration": "node ../test/integration/test-complete-workflow.js",
    "test:ui": "node ../test/ui/test-dashboard-ui.js",
    "test:ltp": "node ../test-ltp-api.js",
    "test:expiry": "node ../test-options-expiry.js",
    "lint": "eslint --ext .js .",
    "setup": "npm install && echo 'Backend setup complete'",
    "db:check": "sqlite3 database/simplifyed.db '.tables'",
    "db:schema": "sqlite3 database/simplifyed.db '.schema'",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:start:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop simplifyed-trading",
    "pm2:restart": "pm2 restart simplifyed-trading",
    "pm2:delete": "pm2 delete simplifyed-trading",
    "pm2:logs": "pm2 logs simplifyed-trading",
    "pm2:status": "pm2 status"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-sqlite3": "^0.9.13",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "lru-cache": "^11.2.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.6",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "nodemon": "^3.0.2"
  }
}
